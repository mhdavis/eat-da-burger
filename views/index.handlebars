<h1 class="text-center">Eat Da Burger</h1>

<div class="container">

  <div class="row">
    <div class="col-6">
      <div class="to-eat-list">
        {{#burgers}}
          {{#unless devoured}}
            <div class="burger-box">
              <p>{{id}}.) {{name}}</p>
              <button class="btn btn-sm devour-btn">Devour</button>
              <button class="btn btn-sm delete-btn">X</button>
            </div>
          {{/unless}}
        {{/burgers}}
      </div>
    </div>

    <div class="col-6">
      <div class="eaten-list">
        {{#burgers}}
          {{#if devoured}}
            <div class="burger-box">
              <p>{{id}}.) {{name}}</p>
              <button class="btn btn-sm delete-btn">X</button>
            </div>
          {{/if}}
        {{/burgers}}
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12 text-center">
      <form class="burger-form">
        <input id="burger-input" type="text" name="burger-text">
        <input id="burger-submit" type="submit" name="submit">
      </form>
    </div>
  </div>

</div>
